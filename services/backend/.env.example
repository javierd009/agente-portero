# Agente Portero Backend - Environment Variables
# Copy this file to .env and fill in your values

# Database (Supabase PostgreSQL)
# For local dev with Docker PostgreSQL: postgresql://postgres:postgres@localhost:5432/agente_portero
# For Supabase: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agente_portero

# Supabase
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_SERVICE_KEY=eyJ...

# JWT
JWT_SECRET=dev-secret-change-in-production

# Evolution API (WhatsApp)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=dev-key
EVOLUTION_INSTANCE=agente-portero

# Vision Service (on-premise) - for camera connectivity
# When set, camera test/snapshot requests are proxied through vision-service
# which runs on the same network as the cameras
# Example: http://integrateccr.ddns.net:8001
VISION_SERVICE_URL=

# Debug mode (set to true for development)
DEBUG=true
